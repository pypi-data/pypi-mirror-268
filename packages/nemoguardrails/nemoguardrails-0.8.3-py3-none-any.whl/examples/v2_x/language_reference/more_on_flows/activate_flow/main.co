flow main
    activate manage user greeting
    bot say "Welcome"
    user said "Bye"
    bot say "Goodbye"
    match RestartEvent()

flow manage user greeting
    user said "Hi"
    bot say "Hello again"

flow bot say $text
  await UtteranceBotAction(script=$text)

flow user said $text
  match UtteranceUserAction.Finished(final_transcript=$text)